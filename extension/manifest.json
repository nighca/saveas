{
  "name": "nighca's SaveAs",
  "version": "1.0",
  "manifest_version": 2,

  "background": { 
    "scripts": [
      "./assets/js/add-on/jquery-1.8.0.min.js",
      "./assets/js/add-on/crypto/rollups/hmac-sha1.js",
      "./assets/js/add-on/crypto/components/core-min.js",
      "./assets/js/add-on/crypto/components/enc-base64-min.js",
      "./assets/js/add-on/auth.js",
      "./assets/js/background.js"
    ] 
  },

  "options_page": "./pages/options.html",

  "permissions": [
    "tabs", "contextMenus", "notifications", "http://*/*", "https://*/*"
  ],
  
  "icons": {
    "16": "icon.png"
  },

  "browser_action": {
      "default_icon":"icon.png",
      "default_title": "SaveAs",
      "default_popup": "./pages/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./assets/js/content.js"]
    }
  ]

}
